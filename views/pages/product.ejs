                    <h1>Reviews</h1>
                </div>
                <h3>what people say</h3>
                <% if (comments.length >= 1) { %>
                    <% comments.forEach(com => { %>
                        <div class="cmnt">
                            <div class="person" style="max-height: 100px;">
                                <img src="../images/account_circle_FILL0_wght400_GRAD0_opsz48.svg" alt="" width="50px" height="50px" style="border-radius: 50%; border: .5px solid black;">
                                <p class="nom" style="margin-top:5px ;"> <%= com.userFName %> </p>
                                <p class="nom" style="margin-top:5px ;"> <%= com.userLName %> </p>
                                
                                <div class="eval">
                                    <!-- <img src="../images/mode_comment_black_24dp.svg" alt="" width="20px" height= "20px"> -->
                                    <!-- <span class="number">n</span> Avis -->
                                </div>
                            </div>
                            <div class="comntContent">
                                    <div class="midl">
